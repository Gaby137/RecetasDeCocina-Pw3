@using RecetasDeCocina.Data.Models
@model List<Receta>

@{
    ViewData["Title"] = "Listado de Recetas Personalizadas";
}

<h2>@ViewData["Title"]</h2>


<div class="form-horizontal">
    <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Ingredientes</th>
                            <th>Preferencias</th>
                            <th>Tipo</th>
                            <th>País</th>
                            <th>Dificultad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var receta in ViewBag.RecetasPersonalizadas)
                        {
                            <tr>
                                <td>@receta.Titulo</td>
                                <td>@receta.Descripcion</td>
                                <td>
                                    <ul>
                                        @foreach (var ingrediente in @receta.ListaIngredientes)
                                        {
                                            <li>
                                                @ingrediente.Nombre
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                        @foreach (var preferencia in @receta.PreferenciasAlimentarias)
                                        {
                                            <li>
                                                @preferencia.PreferenciaAlimentaria
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>@receta.TipoDePlato</td>
                                <td>@receta.PaisDeOrigen</td>
                                <td>@receta.Dificultad</td>
                            </tr>
                        }
                    </tbody>
                </table>
</div>