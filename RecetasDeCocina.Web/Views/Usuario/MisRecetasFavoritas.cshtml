@using RecetasDeCocina.Data.Models
@model List<Receta>

@{
    ViewData["Title"] = "Mis Recetas Favoritas";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Tipo</th>
            <th>País</th>
            <th>Dificultad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receta in Model)
        {
            <tr>
                <td>@receta.Titulo</td>
                <td>@receta.Descripcion</td>
                <td>@receta.TipoDePlato</td>
                <td>@receta.PaisDeOrigen</td>
                <td>@receta.Dificultad</td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
