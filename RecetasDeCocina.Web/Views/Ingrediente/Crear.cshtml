@using RecetasDeCocina.Data.Models
@model Ingrediente
@{
    ViewData["Title"] = "Registro de Ingrediente";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre del Ingrediente</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categoria">Categoria Del Ingrediente</label>
        <select asp-for="Categoria" class="form-control">
            <option value="AceitesyGrasas">Aceites y Grasas</option>
            <option value="CarneyPescado">Carne y Pescado</option>
            <option value="CerealesFrutosSecosyproductosparahornear">Cereales, frutos secos y productos para hornear</option>
            <option value="Frutas">Frutas</option>
            <option value="HierbasyEspecie">Hierbas y Especies</option>
            <option value="HuevosyLacteos">Huevos y Lacteos</option>
            <option value="PastaArrozyLegumbres">Pasta arroz y Legumbres</option>
            <option value="Verduras">Verduras</option>
            <option value="Otros">Otros</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion">Descripcion</label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gramos">Gramos</label>
        <input asp-for="Gramos" class="form-control" />
        <span asp-validation-for="Gramos" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Agregar Ingrediente</button>
</form>